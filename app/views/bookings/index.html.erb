<div>
<h1 class="title">My Bookings</h1>
<table class="table is-striped">
  <thead>  
    <tr>
        <th>Booking Date</th>
        <th>Tour Guide</th>
    </tr>
  </thead>
  <tbody>
    <%if @bookings%>
      <% @bookings.each do |i| %>
        <tr>
            <td><%=i.date%></td>
            <td><%=link_to i.guide.name, guide_path(i) %></td>
            <td><%=link_to 'Edit', edit_booking_path(i)%></td>
            <td><%= link_to 'Delete', delete_booking_path(i.id), :method => :delete %></td>
        </tr>
      <%end%>
    <%end%>
  </tbody>
 </table>
  <p><%= link_to("Back", main_index_path, :method => :get, :class => 'button is-primary') %></p>
</div>
