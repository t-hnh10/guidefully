<%= form_with model: @guide, local:true do |form| %>
    <p>
        <%=label(:name, 'Name')%>
        <%= form.text_field :name, required: true, minlength: 1%>
    </p>
    <p>
        <%=label(:phone_number, 'Phone Number')%>
        <%= form.text_field :phone_number, required: true%>
    </p>
    <p>
        <%=label(:city, 'City')%>
        <%= form.text_field :city, required: true, minlength: 1%>
    </p>
    <p>
        <%=label(:country, 'Country')%>
        <%= form.text_field :country, required: true, minlength: 1%>
    </p>
    <p>
        <%=label(:cost, 'Cost')%>
        <%= form.number_field :cost, required: true, minlength: 1%>
    </p>
    <%= form.submit "Add details" %><br>
    <%= link_to("Back", main_index_path, :method => :get) %>
<%end%>